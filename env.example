# Database
DATABASE_URL=sqlite:///./dms_database.db

# Security (REQUIRED)
SECRET_KEY=your-secret-key-here  # REQUIRED: Change this to a secure random string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI API (REQUIRED for chat functionality)
OPENAI_API_KEY=your-openai-api-key-here  # REQUIRED: Get from https://platform.openai.com/api-keys

# AWS Textract Configuration (REQUIRED for PDF processing)
AWS_ACCESS_KEY_ID=your-aws-access-key-id  # REQUIRED: Get from AWS IAM
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key  # REQUIRED: Get from AWS IAM
AWS_REGION=us-east-1  # Optional: Change if using different AWS region
AWS_S3_BUCKET=your-s3-bucket-name  # REQUIRED: S3 bucket for PDF processing (create in AWS S3 console)

# File Upload Settings
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
